@model BSWebApp.Models.ViewModels.LoginViewModel
<style>
    .top-buffer {
        margin-top: 30px;
    }

    .half {
        width: 50%;
        height: 50%;
    }
</style>

@using (Html.BeginForm())
{
    <h1> @Html.AntiForgeryToken()</h1>

    <div class="row">
        <div class="col-sm-5">
            <div>
                <h2>Login</h2>
                <hr />
                <div class="row top-buffer top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.loginModel.UserId)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.loginModel.UserId)
                    </div>
                </div>
                <div class="row top-buffer top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.loginModel.Password)
                    </div>
                    <div class="col-lg-3">

                        @Html.TextBoxFor(x => x.loginModel.Password)

                    </div>
                </div>

                <input type="submit" />
            </div>
        </div>
        <div class="col-sm-7">
            <div>
                <h2>SignUp</h2>
                <hr />
                <div class="row top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.signUpModel.FirstName)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.signUpModel.FirstName)
                    </div>
                </div>

                <div class="row top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.signUpModel.LastName)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.signUpModel.LastName)
                    </div>
                </div>

                <div class="row top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.signUpModel.LoginName)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.signUpModel.LoginName)
                    </div>
                </div>

                <div class="row top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.signUpModel.Password)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.signUpModel.Password)
                    </div>
                </div>

                <div class="row top-buffer">
                    <div class="col-lg-3">
                        @Html.Label("Confirm Password")
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBox("ConfirmPassword")
                    </div>
                </div>

                <div class="row top-buffer">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.signUpModel.EmailID, new { required = "required" })
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.signUpModel.EmailID)
                    </div>
                </div>


            </div>
        </div>
    </div>





    <div class="form-horizontal">
        <h4>LoginViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
