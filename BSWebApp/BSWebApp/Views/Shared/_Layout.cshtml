.sub-menu-parent {text-align: center; position: relative; }

.sub-menu {
    visibility: hidden; /* hides sub-menu */
  opacity: 0;
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
    -ms-transform: translateY(-2em);
    -webkit-transform: translateY(-2em);
    transform: translateY(-2em);
  z-index: -1;
    -ms-transition: all 0.3s ease-in-out 0s, visibility 0s linear 0.3s, z-index 0s linear 0.01s;
    -o-transition: all 0.3s ease-in-out 0s, visibility 0s linear 0.3s, z-index 0s linear 0.01s;
    -webkit-transition: all 0.3s ease-in-out 0s, visibility 0s linear 0.3s, z-index 0s linear 0.01s;
    transition: all 0.3s ease-in-out 0s, visibility 0s linear 0.3s, z-index 0s linear 0.01s;
}

        .sub-menu-parent:hover .sub-menu {
    visibility: visible; /* shows sub-menu */
  opacity: 1;
  z-index: 1;
    -ms-transform: translateY(0%);
    -webkit-transform: translateY(0%);
    transform: translateY(0%);
    -ms-transition-delay: 0s, 0s, 0.6s;
    -o-transition-delay: 0s, 0s, 0.6s;
    -webkit-transition-delay: 0, 0s, 0.6s;
    transition-delay: 0s, 0s, 0.6s; /* this removes the transition delay so the menu will be visible while the other styles transition */
}



